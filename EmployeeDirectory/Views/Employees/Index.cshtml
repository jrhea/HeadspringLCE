@model IEnumerable<EmployeeData.IEmployee>

@{
    ViewBag.Title = "Index";
}

        @using (Html.BeginForm())
        {
            <hr style="border-color:#df691a" />
            <table class="table-condensed">
                <tr>
                    <th> <h4> Search: &nbsp&nbsp</h4> </th>
                    <th>
                        @Html.DropDownList("category", null, htmlAttributes: new { @class = "form-control input-sm styled-select" })
                    </th>
                    <th>
                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    </th>
                    <th>
                        @Html.TextBox("searchString", null, htmlAttributes: new { @class = "form-control input-sm" })
                    </th>
                    <th>
                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    </th>
                    <th>
                        <input type="submit" value="Filter" class="btn-sm btn-info" />
                    </th>
                </tr>
            </table>
            <hr style="border-color:#df691a" />
        }
        <table class="table table-striped table-hover">
            <tr class="danger">
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CellPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomePhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CellPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomePhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn-sm btn-info" })

